{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "types": [
      "@types/node"
    ],
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./*"],
      "api/*": ["./api/*"],
      "components/*": ["./components/*"],
      "stores/*": ["./stores/*"],
      "types/*": ["./types/*"]
    }
  }
}

